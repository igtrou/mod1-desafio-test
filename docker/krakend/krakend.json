{
  "$schema": "https://www.krakend.io/schema/v2.8/krakend.json",
  "version": 3,
  "name": "Laravel KrakenD Playground",
  "timeout": "5000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "allow_headers": [
        "Authorization",
        "Content-Type",
        "X-Request-Id"
      ],
      "expose_headers": [
        "X-KrakenD-Complete",
        "X-Request-Id"
      ],
      "max_age": "12h",
      "allow_credentials": false
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "access_log_format": "custom",
      "custom_format": "[KRAKEND] METHOD:{{.Req.Method}} PATH:{{.Req.URL.Path}} STATUS:{{.Resp.StatusCode}} REQ_ID:{{index .Req.Headers \"X-Request-Id\"}} LATENCY_NS:{{.Resp.Duration}}"
    },
    "telemetry/opentelemetry": {
      "service_name": "krakend_gateway",
      "metric_reporting_period": 15,
      "trace_sample_rate": 1,
      "layers": {
        "global": {
          "report_headers": true
        },
        "proxy": {
          "report_headers": true
        },
        "backend": {
          "report_headers": true,
          "round_trip": true
        }
      },
      "exporters": {
        "prometheus": [
          {
            "name": "local_prometheus",
            "port": 9091,
            "process_metrics": true,
            "go_metrics": true
          }
        ],
        "otlp": [
          {
            "name": "jaeger_otlp",
            "host": "jaeger",
            "port": 4318,
            "use_http": true,
            "disable_metrics": true
          }
        ]
      }
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/public/auth/token",
      "method": "POST",
      "input_headers": [
        "Content-Type",
        "X-Request-Id"
      ],
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/auth/token",
          "encoding": "json",
          "extra_config": {
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "request"
                ],
                "name": "X-Gateway-Secret",
                "value": "krakend-internal"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/private/auth/token",
      "method": "DELETE",
      "timeout": "3000ms",
      "input_headers": [
        "Authorization",
        "X-Request-Id"
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 40,
          "capacity": 80,
          "client_max_rate": 15,
          "strategy": "ip"
        }
      },
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/auth/token",
          "encoding": "json",
          "timeout": "2500ms",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "request"
                ],
                "name": "X-Gateway-Secret",
                "value": "krakend-internal"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/private/user",
      "method": "GET",
      "timeout": "3000ms",
      "input_headers": [
        "Authorization",
        "X-Request-Id"
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 60,
          "capacity": 120,
          "client_max_rate": 20,
          "strategy": "ip"
        }
      },
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/user",
          "encoding": "json",
          "timeout": "2500ms",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "request"
                ],
                "name": "X-Gateway-Secret",
                "value": "krakend-internal"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/public/quotation/{symbol}",
      "method": "GET",
      "timeout": "3500ms",
      "cache_ttl": "60s",
      "input_headers": [
        "Authorization",
        "X-Request-Id"
      ],
      "input_query_strings": [
        "provider",
        "type"
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 180,
          "capacity": 360,
          "client_max_rate": 90,
          "strategy": "ip"
        },
        "qos/circuit-breaker": {
          "name": "v1-public-quotation-read",
          "interval": 60,
          "timeout": 10,
          "max_errors": 5,
          "log_status_change": true
        }
      },
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/quotation/{symbol}",
          "encoding": "json",
          "timeout": "2500ms",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "qos/http-cache": {
              "shared": true
            },
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "request"
                ],
                "name": "X-Gateway-Secret",
                "value": "krakend-internal"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/private/quotation/{symbol}",
      "method": "GET",
      "timeout": "3500ms",
      "cache_ttl": "60s",
      "input_headers": [
        "Authorization",
        "X-Request-Id"
      ],
      "input_query_strings": [
        "provider",
        "type"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/krakend/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "roles_key": "roles",
          "roles": [
            "reader",
            "moderator"
          ],
          "propagate_claims": [
            [
              "roles",
              "X-Auth-Roles"
            ],
            [
              "sub",
              "X-Auth-Subject"
            ]
          ]
        },
        "qos/ratelimit/router": {
          "max_rate": 180,
          "capacity": 360,
          "client_max_rate": 90,
          "strategy": "ip"
        },
        "qos/circuit-breaker": {
          "name": "v1-private-quotation-read",
          "interval": 60,
          "timeout": 10,
          "max_errors": 5,
          "log_status_change": true
        }
      },
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/quotation/{symbol}",
          "encoding": "json",
          "timeout": "2500ms",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "qos/http-cache": {
              "shared": true
            },
            "modifier/martian": {
              "fifo.Group": {
                "scope": [
                  "request"
                ],
                "modifiers": [
                  {
                    "header.Modifier": {
                      "scope": [
                        "request"
                      ],
                      "name": "X-Gateway-Secret",
                      "value": "krakend-internal"
                    }
                  },
                  {
                    "header.Modifier": {
                      "scope": [
                        "request"
                      ],
                      "name": "X-Gateway-Auth",
                      "value": "jwt"
                    }
                  }
                ]
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/v1/private/quotation/{symbol}",
      "method": "POST",
      "timeout": "4000ms",
      "input_headers": [
        "Authorization",
        "Content-Type",
