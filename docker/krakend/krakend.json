          "max_rate": 25,
          "capacity": 50,
          "client_max_rate": 10,
          "strategy": "ip"
        }
      },
      "backend": [
        {
          "host": [
            "http://laravel.test"
          ],
          "url_pattern": "/api/quotation/{symbol}",
          "encoding": "json",
          "timeout": "3000ms",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            },
            "modifier/martian": {
              "fifo.Group": {
